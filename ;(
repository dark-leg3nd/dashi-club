// Función para crear una nueva conexión de bot
async function createBotConnection(botNumber = null, sessionName = 'default') {
    const sessionPath = `./sessions_${sessionName}`;
    
    // Configuración específica para cada bot
    const { state: botState, saveState: botSaveState, saveCreds: botSaveCreds } = await useMultiFileAuthState(sessionPath);
    
    const botConnectionOptions = {
        logger: pino({ level: 'silent' }),
        printQRInTerminal: false, // Control individual por bot
        mobile: MethodMobile,
        browser: ["MacOs", "Safari"],
        auth: {
            creds: botState.creds,
            keys: makeCacheableSignalKeyStore(botState.keys, Pino({ level: "fatal" }).child({ level: "fatal" })),
        },
        markOnlineOnConnect: false,
        generateHighQualityLinkPreview: true,
        syncFullHistory: false,
        getMessage: async (key) => {
            try {
                let jid = jidNormalizedUser(key.remoteJid)
                let msg = await store.loadMessage(jid, key.id)
                return msg?.message || ""
            } catch (error) {
                return ""
            }
        },
        msgRetryCounterCache: new NodeCache({ stdTTL: 0, checkperiod: 0 }),
        userDevicesCache: new NodeCache({ stdTTL: 0, checkperiod: 0 }),
        defaultQueryTimeoutMs: undefined,
        cachedGroupMetadata: (jid) => (global.botChats.get(sessionName) || {})[jid] || {},
        version: version,
        keepAliveIntervalMs: 55000,
        maxIdleTimeMs: 60000,
    };
    
    const botConn = makeWASocket(botConnectionOptions);
    
    // Almacenar metadata específica por bot
    if (!global.botChats) global.botChats = new Map();
    if (!global.botChats.has(sessionName)) {
        global.botChats.set(sessionName, {});
    }
    
    // Configurar eventos específicos del bot
    botConn.ev.on("creds.update", (creds) => {
        botSaveCreds(creds);
    });
    
    botConn.botId = sessionName;
    botConn.botNumber = botNumber;
    botConn.sessionPath = sessionPath;
    botConn.isInit = false;
    botConn.well = false;
    
    return botConn;
}

// Función para inicializar múltiples bots
async function initializeMultipleBots() {
    // Configurar bots desde variables de entorno o configuración
    const botsConfig = [
        { number: process.env.BOT1_NUMBER, name: 'bot1', session: 'bot1_session' },
        { number: process.env.BOT2_NUMBER, name: 'bot2', session: 'bot2_session' },
        { number: process.env.BOT3_NUMBER, name: 'bot3', session: 'bot3_session' }
        // Agregar más bots según necesites
    ];
    
    // Filtrar bots activos basados en configuración
    const activeBotsConfig = botsConfig.filter(bot => bot.number);
    
    console.log(chalk.cyan(`[ ✿ ] Iniciando ${activeBotsConfig.length} bots...`));
    
    for (const botConfig of activeBotsConfig) {
        try {
            console.log(chalk.yellow(`[ ✿ ] Inicializando bot: ${botConfig.name}`));
            
            const botConn = await createBotConnection(botConfig.number, botConfig.session);
            
            // Configurar handler para este bot específico
            await setupBotHandler(botConn, botConfig.name);
            
            // Almacenar la conexión
            global.conns.set(botConfig.name, botConn);
            global.activeBots.set(botConfig.name, {
                config: botConfig,
                conn: botConn,
                status: 'initializing'
            });
            
            console.log(chalk.green(`[ ✓ ] Bot ${botConfig.name} inicializado`));
            
        } catch (error) {
            console.error(chalk.red(`[ ✗ ] Error inicializando bot ${botConfig.name}:`, error));
        }
    }
}

// Función para configurar el handler de cada bot
async function setupBotHandler(botConn, botName) {
    // Cargar handler específico para cada bot si existe, sino usar el global
    let botHandler;
    try {
        const Handler = await import(`./handlers/${botName}.js`).catch(() => null);
        if (Handler && Object.keys(Handler || {}).length) {
            botHandler = Handler;
            console.log(chalk.blue(`[ i ] Usando handler personalizado para ${botName}`));
        }
    } catch (e) {
        // Usar handler global por defecto
    }
    
    if (!botHandler) {
        botHandler = await import('./handler.js');
    }
    
    // Función de conexión específica para cada bot
    const botConnectionUpdate = async (update) => {
        const { connection, lastDisconnect, isNewLogin, qr } = update;
        
        if (isNewLogin) botConn.isInit = true;
        const code = lastDisconnect?.error?.output?.statusCode || lastDisconnect?.error?.output?.payload?.statusCode;
        
        if (code && code !== DisconnectReason.loggedOut && botConn?.ws.socket == null) {
            console.log(chalk.yellow(`[ ↻ ] Reconectando bot ${botName}...`));
            await reconnectBot(botName).catch(console.error);
        }
        
        if (qr) {
            console.log(chalk.magenta(`[ QR ] Bot ${botName} necesita autenticación`));
            // Aquí puedes implementar lógica para mostrar QR por bot
        }
        
        if (connection === "open") {
            const userName = botConn.user.name || botConn.user.verifiedName || "Desconocido";
            console.log(chalk.green(`[ ✓ ] Bot ${botName} conectado como: ${userName}`));
            global.activeBots.get(botName).status = 'connected';
            
            // Unirse a canales específicos para este bot
            await joinChannels(botConn);
        }
        
        if (connection === "close") {
            console.log(chalk.yellow(`[ ! ] Bot ${botName} desconectado, intentando reconectar...`));
            global.activeBots.get(botName).status = 'disconnected';
        }
    };
    
    // Asignar handlers
    botConn.handler = botHandler.handler.bind(botConn);
    botConn.connectionUpdate = botConnectionUpdate.bind(botConn);
    
    // Configurar eventos
    botConn.ev.on('messages.upsert', botConn.handler);
    botConn.ev.on('connection.update', botConn.connectionUpdate);
    
    return botConn;
}

// Función para reconectar un bot específico
async function reconnectBot(botName) {
    const botInfo = global.activeBots.get(botName);
    if (!botInfo) return;
    
    try {
        const oldChats = global.botChats.get(botName) || {};
        
        // Cerrar conexión anterior
        try {
            botInfo.conn.ws.close();
        } catch { }
        
        botInfo.conn.ev.removeAllListeners();
        
        // Crear nueva conexión
        const newConn = await createBotConnection(botInfo.config.number, botInfo.config.session);
        
        // Restaurar chats
        newConn.chats = oldChats;
        
        // Reconfigurar handler
        await setupBotHandler(newConn, botName);
        
        // Actualizar referencias
        global.conns.set(botName, newConn);
        botInfo.conn = newConn;
        
        return newConn;
    } catch (error) {
        console.error(chalk.red(`[ ✗ ] Error reconectando bot ${botName}:`, error));
        throw error;
    }
}

// Función para enviar mensajes desde cualquier bot
async function sendMessageFromBot(botName, jid, content, options = {}) {
    const botConn = global.conns.get(botName);
    if (!botConn) {
        throw new Error(`Bot ${botName} no encontrado`);
    }
    
    if (global.activeBots.get(botName)?.status !== 'connected') {
        throw new Error(`Bot ${botName} no está conectado`);
    }
    
    return await botConn.sendMessage(jid, content, options);
}

// Función para obtener estado de todos los bots
function getBotsStatus() {
    const status = {};
    for (const [name, info] of global.activeBots.entries()) {
        status[name] = {
            status: info.status,
            number: info.config.number,
            user: info.conn.user ? {
                name: info.conn.user.name || info.conn.user.verifiedName,
                id: info.conn.user.id
            } : null
        };
    }
    return status;
}

// Modificar la inicialización principal
async function main() {
    // ... código inicial anterior ...
    
    // Inicializar múltiples bots en lugar de uno solo
    await initializeMultipleBots();
    
    // Mantener el bot principal original si es necesario (opcional)
    // global.conn = await createBotConnection(global.botNumber, 'main');
    // await setupBotHandler(global.conn, 'main');
    
    // Configurar intervalo para verificar estado de bots
    setInterval(() => {
        for (const [name, info] of global.activeBots.entries()) {
            if (info.status === 'disconnected') {
                console.log(chalk.yellow(`[ ↻ ] Intentando reconectar bot ${name}...`));
                reconnectBot(name).catch(console.error);
            }
        }
    }, 60000); // Verificar cada minuto
    
    // ... resto del código ...
}

